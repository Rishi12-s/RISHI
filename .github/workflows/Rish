    <script>
        // --- ðŸ”’ CONFIGURATION ---
        const API_KEY = 'YAHAN_APNI_RAPID_API_KEY_DALEIN'; 
        const HOST = 'instagram-reels-downloader-api.p.rapidapi.com';

        // 1. Share App Function
        function shareApp() {
            if (navigator.share) {
                navigator.share({
                    title: 'Best Insta Reel Downloader',
                    text: 'Download Instagram Reels easily! Try this app:',
                    url: window.location.href // Ye current link share karega
                }).then(() => console.log('Successful share'))
                .catch((error) => console.log('Error sharing', error));
            } else {
                // Agar share support nahi karta (PC par)
                alert("Link Copied: " + window.location.href);
            }
        }

        // 2. Download Logic
        async function fetchVideo() {
            const url = document.getElementById('urlInput').value.trim();
            const loader = document.getElementById('loader');
            const resultArea = document.getElementById('resultArea');
            const errorMsg = document.getElementById('errorMsg');

            errorMsg.style.display = 'none';
            resultArea.style.display = 'none';

            if (!url) { alert("Link Paste Karein!"); return; }
            loader.style.display = 'block';

            try {
                const response = await fetch(`https://${HOST}/download?url=${encodeURIComponent(url)}`, {
                    method: 'GET',
                    headers: { 'X-RapidAPI-Key': API_KEY, 'X-RapidAPI-Host': HOST }
                });

                const json = await response.json();

                let videoLink = null;
                if (json.data && json.data.medias && json.data.medias[0]) videoLink = json.data.medias[0].url;
                else if (json.data && json.data.url) videoLink = json.data.url;

                if (videoLink) {
                    document.getElementById('vidPlayer').src = videoLink;
                    document.getElementById('dwnBtn').href = videoLink;
                    loader.style.display = 'none';
                    resultArea.style.display = 'block';
                } else {
                    throw new Error("Video nahi mila.");
                }
            } catch (error) {
                loader.style.display = 'none';
                errorMsg.innerText = "Error: " + error.message;
                errorMsg.style.display = 'block';
            }
        }
    </script>
